@model Data_Access.Entities.Product;

<div class="card text-center">
    <h2 class="card-header">Product Detail Information</h2>
    <div class="product-image h-400">
        <img src="@(Model.ImagePath ?? "https://www.freeiconspng.com/thumbs/no-image-icon/no-image-icon-15.png")" style="max-height: 500px; min-height: 500px; min-width: 400px; max-width: 400px; object-fit: contain;" class="card-img-top" alt="Product Image">
    </div>
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">
            @Model.Category
            <span class="badge bg-primary">@Model.Price$</span>
        </p>
        <a asp-action="Index" class="btn btn-dark">Back</a>
    </div>
</div>