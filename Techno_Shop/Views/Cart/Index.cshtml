@model List<Data_Access.Entities.Product>;

@{
    decimal sum = 0;

    foreach (var item in Model)
    {
        sum += item.Price;
    }
}

<div class="card text-center">
    <div class="card-header">
        Your Cart
    </div>
    <div class="card-body">
        <h5 class="card-title">Product List</h5>
        <div>
            @if (!Model.Any())
            {
                <p>No products in the cart!</p>
            }

            <ol class="list-group">
                @foreach (var p in Model)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <img src="@p.ImagePath" style="max-height: 70px; min-height: 70px; min-width: 70px; max-width: 70px; object-fit: contain;"/>
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">@p.Name</div>
                        </div>
                        <span class="badge bg-primary rounded-pill">@p.Price$</span>
                    </li>
                }
            </ol>
        </div>
        <a asp-action="Create" class="btn btn-primary mt-3">Confirm</a>
    </div>
    <div class="card-footer text-muted">
        Total price: @sum
    </div>
</div>
